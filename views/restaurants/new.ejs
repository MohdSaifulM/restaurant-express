<form action="/new" method="POST">
    <h4>Restaurant Info</h4>
    <div>
        <input type="text" name="name" placeholder="Restaurant Name" />
    </div>
    <div>
        <input type="text" name="location" placeholder="Address" />
    </div>
    <div>
        <input type="text" name="cuisine" placeholder="Types of Cuisine" />
    </div>
    <div>
        <input type="text" name="owner" placeholder="Name of Owner" />
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
</form>