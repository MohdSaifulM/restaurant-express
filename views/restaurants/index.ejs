<h4>All Restaurants</h4>
<div>
    <ul>
        <% restaurants.forEach( el => { %>
            <li>
                <%= el.name %> 
                <a href="/show/<%=el._id %>">Show</a>
                <a href="/edit/<%=el._id %>">Edit</a>
                <form method="POST" action="/delete/<%= el._id %>?_method=DELETE">
                    <button type="submit">Delete</button>
                </form>
            </li>
            <% })%>
    </ul>
</div>

<a href="/new">Add</a> 